<% layout('layout/boiler_plate') %>
<div style="margin: auto;">
    <form action="/pdf" method="POST">
        <h2>Add Education and Projects</h2>
        <div class="form-group">
            <label for="education">Education:</label>
            <input type="text" class="form-control" id="education" name="education" placeholder="education">
        </div>
        <div class="form-group">
            <label for="projects">Projects:</label>
            <input type="text" class="form-control" id="projects" name="projects" placeholder="projects">
        </div>
        <button type="submit" class="btn btn-lg btn-primary">Generate PDF</button>
    </form>
</div>
